<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("puroera_header.png", class:"puroera-icon"), "#" %>
    <form class="search-form" action="#">
        <input class='input-box' placeholder='キーワードから探す'>
        <button class="search-button">
            <%= image_tag "search.png", class:"search-icon" %>
        </button>
    </form>
    <ul class='header-right'>
      <% if user_signed_in? %>
        <li><%= link_to '共有する', new_share_path, class: "share_post" %></li>
        <li><%= link_to image_tag(current_user.image, class:"user-nickname") ,user_path(current_user.id) %></li> 
      <% else %>
        <li><%= link_to '共有する', new_share_path, class: "share_post" %></li>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to '共有掲示板', "#", class: "share_board" %></li>
      <li><%= link_to '質問掲示板', "#", class: "question_board" %></li>
      <li><%= link_to 'カテゴリーリスト', "#", class: "category-list" %></li>
      <li><%= link_to 'ユーザーリスト', "#", class: "user-list" %></li>
    </ul>
  </div>
</header>