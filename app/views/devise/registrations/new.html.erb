<header class='second-header'>
  <%= link_to image_tag("puroera_header.png", class:"second-logo"), root_path %>
</header>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', id: 'registration_new', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規登録
    </h1>
  </div>
  
  
  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class="img-upload">
      <div id="previews"></div>
      <div class="click-upload">
        <div class='form-input-text'>
          <%= image_tag 'image.png', class:"form-input-image" %>
          <%= f.file_field :image, id:"item-image", class:"input-default"%>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class='form-input-text'>
      <%= image_tag 'user.png', class:"form-input-image" %>
      <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"ユーザー名", maxlength:"40" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-input-text'>
      <%= image_tag 'mail.png', class:"form-input-image" %>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-input-text'>
      <%= image_tag 'password.png', class:"form-input-image" %>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワード（半角英数6文字以上）" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-input-text'>
      <%= image_tag 'confirm.png', class:"form-input-image" %>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"確認用パスワード" %>
    </div>
  </div>
  <div class='register-btn'>
    <%= f.submit "新規登録する" ,class:"register-blue-btn" %>
  </div>
</div>
<% end %>



